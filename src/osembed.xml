<?xml version="1.0" encoding="utf-8"?>
<extension version="3.5" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_OSEMBED</name>
    <author>Alledia</author>
    <creationDate>May 12 2016</creationDate>
    <copyright>Copyright (C) 2016 Open Source Training, LLC. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>support@alledia.com</authorEmail>
    <authorUrl>http://www.alledia.com</authorUrl>
    <version>1.1.6</version>
    <variant>FREE</variant>
    <description>PLG_CONTENT_OSEMBED_DESCRIPTION</description>

    <scriptfile>script.installer.php</scriptfile>

    <files>
        <folder>language</folder>
        <folder>library</folder>
        <folder>views</folder>
        <folder>form</folder>
        <filename plugin="osembed">osembed.php</filename>
        <filename>include.php</filename>
    </files>

    <media destination="plg_content_osembed" folder="media">
        <folder>css</folder>
        <folder>images</folder>
        <folder>fonts</folder>
    </media>

    <config>
        <fields name="params">
            <fieldset name="basic" addfieldpath="/plugins/content/osembed/form/fields">
                <field
                    name="customfooter"
                    type="customfooter"
                    media="plg_content_osembed"
                    showgoproad="1"
                    jedurl="http://extensions.joomla.org/extensions/extension/social-web/social-media/osembed" />
            </fieldset>
        </fields>
    </config>

    <updateservers>
        <server type="extension" priority="1" name="OSEmbed - OSTraining Deployment Server"><![CDATA[https://deploy.ostraining.com/client/update/free/stable/plg_content_osembed]]></server>
    </updateservers>

    <alledia>
        <element publish="true">osembed</element>
        <namespace>OSEmbed</namespace>
        <license>free</license>
        <targetplatform>3.*</targetplatform>
        <relatedExtensions>
            <extension
                type="library"
                element="allediaframework">AllediaFramework</extension>

            <extension
                type="plugin"
                group="system"
                element="ossystem"
                publish="true"
                ordering="first">OSSystem</extension>

        </relatedExtensions>

        <include>AllediaFreeDefaultFiles</include>

        <obsolete>
            <extension
                type="plugin"
                group="content"
                element="osembedcontent"
                publish="true"
                ordering="last">OSEmbedContent</extension>

            <extension
                type="plugin"
                group="system"
                element="osembed"
                publish="true"
                ordering="last">OSEmbed</extension>

            <extension
                type="plugin"
                group="system"
                element="osembedpreview"
                publish="true"
                ordering="last">OSEmbedPreview</extension>
        </obsolete>
    </alledia>
</extension>
